<div class="text-center">
  <div class="row">
    <ul class="list-group">
    <li class="list-group-item"><h2><%= @movie.title %></h2></li>
    <li class="list-group-item"><h2><%= @movie.format %></h2></li>
    <li class="list-group-item"><h2><%= @movie.length %></h2></li>
    <li class="list-group-item"><h2><%= @movie.release_year %></h2></li>
    <li class="list-group-item"><h2><%= @movie.rating %> stars</h2></li>
    </ul>
  </div>

<div class="btn-group" role="group" aria-label="buttons">
  <button type="button" class="btn btn-default"><%= link_to 'Edit', edit_movie_path(@movie) %></button>
  <button type="button" class="btn btn-default"><%= link_to 'Back', movies_path %></button>
  <button type="button" class="btn btn-default"><%= link_to 'Destroy', @movie, method: :delete, data: { confirm: 'Are you sure?' } %>
</button>
</div>
